.l-body {
	padding: var(--pad-lr) 0 var(--pad-lr) var(--pad-lr);
}
.l-ul {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding-bottom: 32rpx;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.l-add,
.l-li {
	width: 28%;
	height: 392rpx;
	margin-right: 5%;
	margin-bottom: 32rpx;
}
.l-li {
	text-align: center;
}
.l-add-view,
.l-li-img {
	width: 100%;
	height: 300rpx;
	border-radius: 10rpx;
	margin-bottom: 8rpx;
}
.l-add-view {
	box-sizing: border-box;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	border: 6rpx solid rgba(126, 127, 148, 1);
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.l-icon-add {
	width: 36rpx;
	height: 36rpx;
}
.l-li-txt {
	padding: 0 10rpx;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
}
.book-head {
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.book-title {
	margin-left: 5px;
	color: #fff;
	font-size: var(--f-size-3);
}
.book-menu {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.book-new {
	position: absolute;
	top: -20rpx;
	right: -30rpx;
	background-color: #da0000;
	color: #fff;
	font-size: 8rpx;
	padding: 0 20rpx;
	-webkit-transform: rotate(45deg);
	        transform: rotate(45deg);
	height: 50rpx;
	line-height: 75rpx;
}

